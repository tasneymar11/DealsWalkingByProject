<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/grey_900"
    android:padding="10dp"
    android:layout_marginBottom="10dp">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/grey_900">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/yourlogohere"
            android:id="@+id/newdeal_image"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:visibility="invisible"
            android:id="@+id/newdeal_image_name"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newdeal_title"
            android:gravity="bottom"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:text="Pizza Hut, FC Road"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/newdeal_description"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:text="Buy 1 pizza and get 50% off on the other pizza of same price or higher"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newdeal_validity"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:text="Valid till 15th July"
            android:textColor="@color/pink_400"
            android:textStyle="bold"
            android:textSize="14sp"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/newdealActivity_latitude"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/newdealActivity_longitude"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:visibility="invisible"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Valid Till : "
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"
                android:id="@+id/newtextViewDisplayDay"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/newtextViewDisplayMonth"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="85dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"
                android:id="@+id/newtextViewDisplayYear"
                android:textColor="@color/white"
                android:textStyle="bold"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:textAlignment="center"
                android:layout_marginLeft="35dp"
                android:id="@+id/newButtonGetPromo"
                android:src="@drawable/couponcode"
                android:scaleType="centerCrop"
                android:padding="8dp"/>
            <TextView
                android:layout_width="320dp"
                android:layout_height="60dp"
                android:layout_marginLeft="25dp"
                android:id="@+id/newtextViewPromoCode"
                android:visibility="invisible"
                android:textColor="@color/red_50"
                android:text="35Y6OP"
                android:textAlignment="center"
                android:textSize="24sp"
                android:padding="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:src="@drawable/ic_location_deal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="60dp"
                android:id="@+id/newimageButton2"
                android:onClick="getlatlng"/>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>